{
  "manifest_version": 2,
  "name": "Bookmark Folder Suggester",
  "short_name": "Bookmark Folder Suggester",
  "version": "1.0.2",
  "author": "Nikolay Borzov (chintsu)",

  "description": "Suggests folder for a bookmark using predefined rules",

  "icons": {
    "16": "img/16.png",
    "48": "img/app/48.png",
    "128": "img/app/128.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "img/16.png",
      "24": "img/browser-action/24.png",
      "32": "img/browser-action/32.png"
    },
    "default_popup": "popup.html",
    "default_title": "Suggest Bookmark Folder"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  },

  "permissions": ["activeTab", "bookmarks", "storage", "downloads"],
  "minimum_chrome_version": "57.0.2987.133"
}
