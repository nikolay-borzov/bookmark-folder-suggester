{
  "manifest_version": 2,
  "name": "__MSG_extension_name__",
  "short_name": "__MSG_extension_name__",
  "description": "__MSG_extension_description__",
  "version": "1.0.0",
  "author": "Nikolay Borzov (chintsu)",

  "default_locale": "en",

  "icons": {
    "16": "img/16.png",
    "48": "img/app/48.png",
    "128": "img/app/128.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "img/16.png",
      "24": "img/browser-action/24.png",
      "32": "img/browser-action/32.png"
    },
    "default_popup": "popup.html",
    "default_title": "__MSG_popup_title__"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  },

  "permissions": [
    "activeTab",
    "bookmarks",
    "storage"
  ],

  "minimum_chrome_version": "57.0.2987.133"
}